<p id="notice"><%= notice %></p>

<p>
  <strong>Feeling:</strong>
  <%= @water.feeling %>
</p>

<p>
  <strong>Intensity:</strong>
  <%= @water.intensity %>
</p>
<% if @water.images.attached? %>
<p>
  <strong>Thumbnail Images:</strong>
  <br>
  <% @water.images.each do |image| %>
    <%= image_tag(image.variant(resize: "300x300")) %>
  <% end %>
</p>
<p>
  <strong>Bigger Images:</strong>
  <br>
  <% @water.images.each do |image| %>
    <%= image_tag(image.variant(resize: "500x500")) %>
  <% end %>
</p>
<p>
  <strong>Ridiculously Big Images:</strong>
  <br>
  <% @water.images.each do |image| %>
    <%= image_tag(image.variant(resize: "2400x2400")) %>
  <% end %>
</p>
<% end %>

<%= link_to 'Edit', edit_water_path(@water) %> |
<%= link_to 'Back', waters_path %>
